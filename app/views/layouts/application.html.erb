  <body>
    <div class="page">
      <header>
        <nav class="navbar navbar-expand-lg" aria-label="Navegación principal">
          <div class="nav-inner d-flex flex-wrap flex-lg-nowrap align-items-center gap-3">
            <a href="/" class="navbar-brand logo">
              <span class="logo-mark">H</span>
              Homason
            </a>
            <button
              class="navbar-toggler nav-toggle ms-auto d-lg-none"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#nav-collapse"
              aria-controls="nav-collapse"
              aria-expanded="false"
              aria-label="Mostrar u ocultar el menú"
            >
              <span class="navbar-toggler-icon" aria-hidden="true"></span>
              <span class="ms-2">Menú</span>
            </button>
            <div class="collapse navbar-collapse nav-collapse" id="nav-collapse">
              <div class="menu flex-grow-1">
                <a href="#como-funciona">Cómo funciona</a>
                <a href="#precios">Precios</a>
                <a href="#profesionales">Para profesionales</a>
                <a href="#faq">FAQ</a>
                <a href="#contacto">Contacto</a>
              </div>
              <div class="nav-actions ms-lg-4">
                <% if user_signed_in? %>
                  <span class="user-pill">
                    <%= current_user[:name] %> · <%= role_label(current_user[:role]) %>
                  </span>
                  <%= link_to "Dashboard", dashboard_path, class: "button secondary" %>
                  <%= link_to "Configuración", profile_path, class: "button secondary" %>
                  <%= button_to "Cerrar sesión", session_path, method: :delete, form: { class: "inline-form" }, class: "button ghost" %>
                <% else %>
                  <%= link_to "Login clientes", new_session_path(role: :client), class: "button secondary" %>
                  <%= link_to "Login profesionales", new_session_path(role: :professional), class: "button primary" %>
                <% end %>
              </div>
            </div>
          </div>
        </nav>
      </header>

      <main>
        <% if flash.any? %>
          <div class="flash-container">
            <% flash.each do |type, message| %>
              <div class="flash <%= type %>"><%= message %></div>
            <% end %>
          </div>
        <% end %>
        <%= yield %>
      </main>

      <footer>
        <div class="footer-content">
          <strong>Homason · Reformas y obras bajo tu control.</strong>
          <div class="footer-links">
            <a href="#como-funciona">Cómo funciona</a>
            <a href="#profesionales">Para profesionales</a>
            <a href="#faq">FAQ</a>
            <a href="#contacto">Contacto</a>
            <a href="#">Aviso legal</a>
            <a href="#">Privacidad</a>
            <a href="#">Cookies</a>
          </div>
          <p>Email: hola@homason.es · WhatsApp: +34 611 000 000 · Madrid, Barcelona y alrededores.</p>
          <p>© <%= Time.current.year %> Homason.</p>
        </div>
      </footer>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>    
  </body>
