    <style>
      :root {
        --bg: #f8f7ff;
        --bg-accent: #f0f4ff;
        --surface: #ffffff;
        --surface-alt: #fef5ef;
        --text: #111322;
        --text-soft: #5d6079;
        --accent: #4c5cff;
        --accent-strong: #2c34f0;
        --accent-warm: #f97316;
        --border: rgba(17, 19, 34, 0.08);
      }

      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        background: radial-gradient(circle at 20% 20%, rgba(76, 92, 255, 0.12), transparent 45%),
          radial-gradient(circle at 80% 0%, rgba(249, 115, 22, 0.08), transparent 40%), var(--bg);
        color: var(--text);
        min-height: 100vh;
        line-height: 1.6;
        overflow-x: hidden;        
      }

      img {
        max-width: 100%;
        height: auto;
        border-radius: 20px;
        display: block;
      }

      a {
        color: inherit;
        text-decoration: none;
      }

      .page {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      header {
        position: sticky;
        top: 0;
        z-index: 50;
        backdrop-filter: blur(18px);
        background: rgba(255, 255, 255, 0.8);
        border-bottom: 1px solid var(--border);
      }

      .nav-inner {
        max-width: 1200px;
        margin: 0 auto;
        padding: 1rem 1.5rem;
        width: 100%;
      }

      .logo {
        display: flex;
        align-items: center;
        gap: 0.8rem;
        font-weight: 700;
        font-size: 1.1rem;
        letter-spacing: 0.05em;
        text-transform: uppercase;
      }

      .logo-mark {
        width: 42px;
        height: 42px;
        border-radius: 16px;
        background: linear-gradient(120deg, var(--accent), var(--accent-strong));
        color: #fff;
        display: grid;
        place-items: center;
        font-family: "Space Grotesk", sans-serif;
      }

      .nav-collapse {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1.5rem;
        flex: 1 1 auto;
      }

      .nav-collapse.collapse:not(.show) {
        display: none;
      }


      .menu {
        display: flex;
        gap: 0.65rem;
        flex-wrap: nowrap;
        font-size: 0.95rem;
        color: var(--text-soft);
        white-space: nowrap;        
      }

      .menu a {
        padding: 0.4rem 0.9rem;
        border-radius: 999px;
        transition: background 140ms ease, color 140ms ease;
      }

      .menu a:hover,
      .menu a:focus-visible {
        background: rgba(76, 92, 255, 0.12);
        color: var(--accent);
      }

      .nav-actions {
        display: flex;
        gap: 0.6rem;
        flex-wrap: nowrap;
        justify-content: flex-end;
      }

      .nav-toggle {
        border: 1px solid var(--border);
        background: #fff;
        border-radius: 999px;
        padding: 0.45rem 0.9rem;
        font-weight: 600;
        font-size: 0.9rem;
        color: var(--text);
      }

      .nav-toggle:focus-visible {
        outline: 2px solid var(--accent);
        outline-offset: 3px;
      }

      .navbar-toggler-icon {
        filter: invert(17%) sepia(8%) saturate(1189%) hue-rotate(199deg) brightness(93%) contrast(86%);
      }

      .user-pill {
        padding: 0.4rem 0.9rem;
        border-radius: 999px;
        background: rgba(76, 92, 255, 0.12);
        border: 1px solid rgba(76, 92, 255, 0.4);
        font-size: 0.85rem;
        color: var(--accent);
      }

      .button {
        padding: 0.8rem 1.3rem;
        border-radius: 999px;
        border: 1px solid transparent;
        font-weight: 600;
        font-size: 0.95rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.35rem;
        transition: transform 120ms ease, box-shadow 120ms ease, background 120ms ease;
      }

      .button.primary {
        background: linear-gradient(130deg, var(--accent), var(--accent-strong));
        color: #fff;
        box-shadow: 0 18px 35px rgba(76, 92, 255, 0.3);
      }

      .button.secondary {
        background: rgba(255, 255, 255, 0.7);
        border: 1px solid var(--border);
        color: var(--text);
      }

      .button.ghost {
        border: 1px dashed var(--border);
        background: transparent;
        color: var(--text-soft);
      }

      .button:hover,
      .button:focus-visible {
        transform: translateY(-2px);
      }

      main {
        flex: 1;
        width: 100%;
      }

