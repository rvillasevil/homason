      .content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 4rem 1.5rem;
        display: grid;
        gap: 3rem;
      }

      .section {
        background: var(--surface);
        border-radius: 36px;
        padding: clamp(2rem, 4vw, 3.75rem);
        border: 1px solid rgba(255, 255, 255, 0.6);
        box-shadow: 0 35px 60px rgba(24, 18, 64, 0.08);
        position: relative;
      }

      .section.alt {
        background: transparent;
        border: 1px solid rgba(76, 92, 255, 0.12);
        box-shadow: none;
      }

      .section-title {
        font-size: clamp(2rem, 4vw, 2.8rem);
        margin: 0 0 1rem;
        font-family: "Space Grotesk", "Inter", sans-serif;
        letter-spacing: -0.01em;
      }

      .section-header {
        margin-bottom: 2.5rem;
      }

      .section-header p {
        margin: 0;
      }

      .section-lead,
      .lead {
        color: var(--text-soft);
        font-size: 1.1rem;
        max-width: 60ch;
        margin-bottom: 1.5rem;
      }

      .hero-grid {
        display: grid;
        gap: 2.5rem;
      }

      .hero-copy h1 {
        font-size: clamp(2.6rem, 6vw, 3.6rem);
        line-height: 1.05;
        margin: 0 0 1rem;
        font-family: "Space Grotesk", "Inter", sans-serif;
      }

      .gradient-text {
        background: linear-gradient(120deg, var(--text), var(--accent));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .accent-label {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        font-size: 0.85rem;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        font-weight: 600;
        padding: 0.35rem 0.9rem;
        border-radius: 999px;
        background: rgba(249, 115, 22, 0.12);
        color: var(--accent-warm);
      }

      .chip-row {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1.25rem;
      }

      .chip {
        padding: 0.45rem 0.9rem;
        border-radius: 999px;
        background: rgba(76, 92, 255, 0.08);
        color: var(--accent);
        font-weight: 600;
        font-size: 0.85rem;
      }

      .hero-actions {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
      }

      .metrics {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1rem;
        margin-top: 1.75rem;
      }

      .metric {
        padding: 1rem 1.2rem;
        border-radius: 24px;
        border: 1px solid var(--border);
        background: var(--surface-alt);
      }

      .metric strong {
        display: block;
        font-size: 1.8rem;
      }

      .media-stack {
        position: relative;
      }

      .media-stack img.primary {
        box-shadow: 0 30px 60px rgba(0, 0, 0, 0.18);
      }

      .media-stack img.secondary {
        position: absolute;
        right: 5%;
        bottom: -12%;
        width: 55%;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
      }

      .floating-card {
        position: absolute;
        top: 10%;
        left: -6%;
        background: #fff;
        border-radius: 20px;
        padding: 1rem 1.2rem;
        border: 1px solid var(--border);
        box-shadow: 0 18px 30px rgba(15, 23, 42, 0.15);
        max-width: 210px;
      }

      .card-grid {
        display: grid;
        gap: 1rem;
        grid-template-columns: repeat(auto-fit, minmax(230px, 1fr));
      }

      .card {
        border: 1px solid var(--border);
        border-radius: 24px;
        padding: 1.75rem;
        background: #fff;
      }

      .card--accent {
        background: linear-gradient(140deg, rgba(76, 92, 255, 0.1), rgba(76, 92, 255, 0));
      }

      .icon-chip {
        width: 48px;
        height: 48px;
        border-radius: 16px;
        background: rgba(76, 92, 255, 0.15);
        display: grid;
        place-items: center;
        font-weight: 600;
        color: var(--accent);
        margin-bottom: 1rem;
      }

      .timeline {
        display: grid;
        gap: 1.5rem;
      }

      .timeline-step {
        border-left: 3px solid rgba(76, 92, 255, 0.4);
        padding-left: 1rem;
      }

      .timeline-step h3 {
        margin-top: 0;
        margin-bottom: 0.35rem;
      }

      .story-grid {
        display: grid;
        gap: 2rem;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        align-items: center;
      }

      .story-media {
        position: relative;
      }

      .story-media::after {
        content: "";
        position: absolute;
        inset: 10% 8% 0 auto;
        border-radius: 24px;
        background: rgba(76, 92, 255, 0.12);
        z-index: -1;
      }

      .list-check {
        list-style: none;
        padding: 0;
        margin: 1.2rem 0 0;
        display: grid;
        gap: 0.6rem;
      }

      .list-check li {
        position: relative;
        padding-left: 1.75rem;
      }

      .list-check li::before {
        content: "";
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: var(--accent);
        position: absolute;
        left: 0;
        top: 0.4rem;
        box-shadow: 0 0 0 4px rgba(76, 92, 255, 0.18);
      }

      .logo-wall {
        display: flex;
        flex-wrap: wrap;
        gap: 0.8rem;
      }

      .logo-pill {
        padding: 0.65rem 1rem;
        border-radius: 999px;
        border: 1px dashed var(--border);
        color: var(--text-soft);
        font-size: 0.9rem;
      }

      .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1rem;
      }

      .service-card {
        border-radius: 22px;
        border: 1px solid var(--border);
        padding: 1.2rem;
        background: #fff;
        font-weight: 600;
      }

      .testimonial-grid {
        display: grid;
        gap: 1.5rem;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      }

      .testimonial {
        border: 1px solid var(--border);
        border-radius: 28px;
        padding: 1.8rem;
        background: #fff;
      }

      .testimonial img {
        width: 56px;
        height: 56px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 0.75rem;
      }

      .cta-panel {
        background: linear-gradient(135deg, rgba(76, 92, 255, 0.85), rgba(44, 52, 240, 0.9));
        color: #fff;
        border-radius: 32px;
        padding: 2.5rem;
        display: grid;
        gap: 1rem;
      }

      form {
        display: grid;
        gap: 1rem;
      }

      label span {
        font-size: 0.85rem;
        color: var(--text-soft);
      }

      .input,
      textarea,
      select {
        width: 100%;
        padding: 0.85rem 1rem;
        border-radius: 16px;
        border: 1px solid var(--border);
        font: inherit;
        background: #fff;
      }

      textarea {
        resize: vertical;
      }

      .inline-form {
        display: inline;
      }

      .inline-form button {
        font: inherit;
        background: transparent;
      }

      .faq-grid {
        display: grid;
        gap: 1rem;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      }

      .faq-card {
        border: 1px solid var(--border);
        border-radius: 22px;
        padding: 1.2rem 1.4rem;
        background: #fff;
      }

      .contact-grid {
        display: grid;
        gap: 2rem;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        align-items: start;
      }

      footer {
        border-top: 1px solid rgba(17, 19, 34, 0.1);
        padding: 2.5rem 1.5rem 3.5rem;
        color: var(--text-soft);
        font-size: 0.9rem;
        background: #fff;
        margin-top: 4rem;
      }

      footer .footer-content {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        gap: 1rem;
      }

      footer .footer-links {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
      }

      @media (max-width: 768px) {
        .nav-toggle {
          display: inline-flex;
          align-items: center;
          gap: 0.35rem;
        }

        .nav-collapse {
          width: 100%;
          flex-direction: column;
          align-items: stretch;
          margin-top: 1rem;
        }

        .menu,
        .nav-actions {
          width: 100%;
          flex-direction: column;
          align-items: stretch;
          text-align: center;
        }

        .menu a,
        .nav-actions .button,
        .nav-actions .user-pill {
          width: 100%;
          justify-content: center;
        }

        .hero-actions {
          flex-direction: column;
        }
      }

      @media (max-width: 600px) {
        .media-stack img.secondary,
        .floating-card {
          position: static;
        }

        .media-stack img.secondary {
          width: 80%;
          margin: 1.25rem auto 0;
        }

        .floating-card {
          margin-top: 1rem;
        }
      }


      @media (max-width: 768px) {
        .nav {
          flex-direction: column;
          align-items: stretch;
          text-align: center;
          padding-top: 1.25rem;
          padding-bottom: 1.25rem;
        }

        .logo {
          justify-content: center;
        }

        .menu,
