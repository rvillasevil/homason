        }

        .menu a {
          width: 100%;
          padding: 0.65rem 0.9rem;
        }

        .nav-actions {
          flex-direction: column;
          align-items: stretch;
        }

        .nav-actions .button,
        .nav-actions .user-pill {
          width: 100%;
          justify-content: center;
        }

        .hero-actions {
          flex-direction: column;
        }
      }

      @media (max-width: 600px) {
        .media-stack img.secondary,
        .floating-card {
          position: static;
        }

        .media-stack img.secondary {
          width: 80%;
          margin: 1.25rem auto 0;
        }

        .floating-card {
          margin-top: 1rem;
        }
      }

      @media (min-width: 900px) {
        .hero-grid {
          grid-template-columns: repeat(2, minmax(0, 1fr));
          align-items: center;
        }

        .content {
          padding-top: 5rem;
        }
      }
    </style>
