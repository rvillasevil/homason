      .navbar__toggle span {
        display: block;
        width: 20px;
        height: 2px;
        background: var(--brand-primary);
        border-radius: 999px;
        position: relative;
        transition: transform 150ms ease, opacity 150ms ease;
      }

      .navbar__toggle span::before,
      .navbar__toggle span::after {
