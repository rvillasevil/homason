<div class="grid two-columns">
  <section class="card">
    <div class="card__header">
      <h2>Próximas reservas</h2>
      <% if @upcoming_bookings.any? %>
        <%= link_to "Ver todas", bookings_path, class: "btn-link btn-link--small" %>
      <% end %>
    </div>
    <% if @upcoming_bookings.any? %>
      <ul class="list" role="list">
        <% @upcoming_bookings.each do |booking| %>
          <li class="list__item">
            <div class="list__title"><%= l(booking.date, format: :long) %> · <%= booking.days %> días</div>
            <div class="list__meta">
              <% if booking.professional_profile.present? %>
                <span>Profesional: <strong><%= booking.professional_profile.user.name %></strong></span>
              <% else %>
                <span class="muted">Profesional sin asignar</span>
              <% end %>
              <span>Ubicación: <%= booking.address %></span>
            </div>
            <p class="muted"><%= booking.description %></p>
            <span class="status" data-status="<%= booking.status %>"><%= booking.status.humanize %></span>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="muted">Aún no tienes reservas programadas. Cuando confirmes un proyecto aparecerá aquí.</p>
    <% end %>
  </section>

  <section class="card">
    <div class="card__header">
      <h2>Tus suscripciones</h2>
      <% if @subscriptions.any? %>
        <%= link_to "Gestionar", subscriptions_path, class: "btn-link btn-link--small" %>
      <% end %>
    </div>
    <% if @subscriptions.any? %>
      <table>
        <thead>
          <tr>
            <th>Plan</th>
            <th>Estado</th>
            <th>Detalles</th>
          </tr>
        </thead>
        <tbody>
          <% @subscriptions.each do |subscription| %>
            <tr>
              <td>
                <strong><%= subscription.subscription_plan.name %></strong><br />
                <% plan_price = subscription.subscription_plan.price_cents.to_i / 100.0 %>
                <span class="muted"><%= number_to_currency(plan_price) %> / mes</span>
              </td>
              <td>
                <span class="status" data-status="<%= subscription.active? ? "active" : "inactive" %>">
                  <%= subscription.active? ? "Activa" : "Inactiva" %>
                </span>
              </td>
              <td>
                <% if subscription.started_at.present? %>
                  <div>Inició el <%= l(subscription.started_at, format: :long) %></div>
                <% end %>
                <% if subscription.remaining_hours.present? %>
                  <div class="muted">Horas disponibles: <%= subscription.remaining_hours %></div>
                <% end %>
                <% if subscription.cancelled_at.present? %>
                  <div class="muted">Cancelada el <%= l(subscription.cancelled_at, format: :long) %></div>
                <% elsif subscription.active? %>
                  <div class="muted">Renovación automática activada</div>
                <% else %>
                  <div class="muted">Renovación manual</div>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="muted">Explora nuestros planes para optimizar tus servicios y obtener profesionales prioritarios.</p>
      <%= link_to "Ver planes", subscription_plans_path, class: "btn-link" %>
    <% end %>
  </section>
</div>

<section class="card">
  <div class="card__header">
    <h2>Resumen de reservas</h2>
    <% if @bookings.any? %>
      <%= link_to "Gestionar reservas", bookings_path, class: "btn-link btn-link--small" %>
    <% end %>
  </div>
  <% if @bookings.any? %>
    <table>
      <thead>
        <tr>
          <th>Proyecto</th>
          <th>Fechas</th>
          <th>Profesional</th>
          <th>Estado</th>
          <th>Archivos</th>
        </tr>
      </thead>
      <tbody>
        <% @bookings.each do |booking| %>
          <tr>
            <td>
              <strong><%= booking.description.truncate(70) %></strong><br />
              <span class="muted"><%= booking.address %></span>
            </td>
            <td><%= l(booking.date, format: :long) %> (<%= booking.days %> días)</td>
            <td>
              <% if booking.professional_profile.present? %>
                <strong><%= booking.professional_profile.user.name %></strong>
                <div class="muted"><%= booking.professional_profile.zone %></div>
              <% else %>
                <span class="muted">Sin asignar</span>
              <% end %>
            </td>
            <td><span class="status" data-status="<%= booking.status %>"><%= booking.status.humanize %></span></td>
            <td>
              <% if booking.attachments.any? %>
                <div class="attachments">
                  <% booking.attachments.each_with_index do |url, idx| %>
                    <%= link_to "Archivo #{idx + 1}", url, target: "_blank", rel: "noopener", class: "btn-link btn-link--small" %>
                  <% end %>
                </div>
              <% else %>
                <span class="muted">Sin archivos</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="muted">Cuando programes tu primera reserva podrás consultarla y seguir su estado desde aquí.</p>
    <%= link_to "Explorar servicios", bookings_path, class: "btn-link" %>
  <% end %>
</section>

<section class="card">
  <div class="card__header">
    <h2>Pedidos de materiales</h2>
  </div>
  <% if @material_orders.any? %>
    <table>
      <thead>
        <tr>
          <th>Pedido</th>
          <th>Estado</th>
          <th>Actualización</th>
        </tr>
      </thead>
      <tbody>
        <% @material_orders.each do |order| %>
          <tr>
            <td>
              <strong><%= order.booking.description.truncate(60) %></strong><br />
              <span class="muted">Reserva del <%= l(order.booking.date, format: :long) %></span>
            </td>
            <td><span class="status" data-status="<%= order.status %>"><%= order.status.humanize %></span></td>
            <td>
              <% if order.provider_ref.present? %>
                <div>Referencia: <strong><%= order.provider_ref %></strong></div>
              <% end %>
              <div class="muted">Actualizado el <%= l(order.updated_at, format: :short) %></div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="muted">Cuando se generen pedidos para tus proyectos, verás su estado y fecha de entrega aquí.</p>
  <% end %>
</section>

<section class="card">
  <div class="card__header">
    <h2>Leads recibidos</h2>
  </div>
  <% if @leads.any? %>
    <table>
      <thead>
        <tr>
          <th>Cliente</th>
          <th>Contacto</th>
          <th>Estado</th>
          <th>Origen</th>
          <th>Notas</th>
        </tr>
      </thead>
      <tbody>
        <% @leads.each do |lead| %>
          <tr>
            <td><%= lead.name %></td>
            <td>
              <div class="link-group">
                <% if lead.email.present? %>
                  <%= mail_to lead.email, lead.email, class: "btn-link btn-link--small" %>
                <% end %>
                <% if lead.phone.present? %>
                  <%= link_to lead.phone, "tel:#{lead.phone}", class: "btn-link btn-link--small" %>
                <% end %>
              </div>
            </td>
            <td><span class="status" data-status="<%= lead.status %>"><%= lead.status.humanize %></span></td>
            <td><%= lead.source.presence || "—" %></td>
            <td><%= lead.notes.to_s.truncate(120) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="muted">Aún no has generado leads. Comparte tu enlace personalizado para recibir nuevas solicitudes.</p>
  <% end %>
</section>